<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <ThingDef Abstract="True" Name="AbstractFootballPitch" ParentName="BuildingBase">
        <defName>AbstractFootballPitch</defName>
        <altitudeLayer>Building</altitudeLayer>
        <rotatable>false</rotatable>
        <fillPercent>0.35</fillPercent>
        <size>(13,7)</size>
        <building>
            <joyKind>Gaming_Football</joyKind>
            <multiSittable>true</multiSittable>
        </building>
        <designationCategory>Joy</designationCategory>
        <comps>
            <li Class="Rimball.CompProperties_SportPitch">
                <soundDefName>PlayFootballKick</soundDefName>
                <potentialTraits>
                    <li>
                        <traitDefName>SpeedOffset</traitDefName>
                        <degree>2</degree>
                    </li>
                </potentialTraits>
                <sideACoords>
                    <li>
                        <x>0</x>
                        <z>3</z>
                    </li>
                    <li>
                        <x>2</x>
                        <z>3</z>
                    </li>
                    <li>
                        <x>3</x>
                        <z>1</z>
                    </li>
                    <li>
                        <x>3</x>
                        <z>5</z>
                    </li>
                    <li>
                        <x>5</x>
                        <z>3</z>
                    </li>
                </sideACoords>
                <sideBCoords>
                    <li>
                        <x>12</x>
                        <z>3</z>
                    </li>
                    <li>
                        <x>10</x>
                        <z>3</z>
                    </li>
                    <li>
                        <x>9</x>
                        <z>1</z>
                    </li>
                    <li>
                        <x>9</x>
                        <z>5</z>
                    </li>
                    <li>
                        <x>7</x>
                        <z>3</z>
                    </li>
                </sideBCoords>
            </li>
        </comps>
        <clearBuildingArea>true</clearBuildingArea>
    </ThingDef>

    <ThingDef ParentName="AbstractFootballPitch">
        <defName>DustFootballPitch</defName>
        <label>Dust Football Pitch</label>
        <description>Jumpers for goal posts, generations of ancient earth children grew up with this in footballs home of England before government cut backs removed all public spaces.</description>
        <graphicData>
            <texPath>Things/DustFootballPitch</texPath>
            <graphicClass>Graphic_Multi</graphicClass>
            <drawSize>(13,7)</drawSize>
            <color>(1.0, 1.0, 1.0, 1.0)</color>
        </graphicData>
        <uiIconPath>UI/DustFootballPitch_UI</uiIconPath>
        <costList>
            <Cloth>100</Cloth>
        </costList>
        <statBases>
            <WorkToBuild>1000</WorkToBuild>
            <MaxHitPoints>2000</MaxHitPoints>
            <Flammability>1.0</Flammability>
            <Beauty>1</Beauty>
            <Mass>8</Mass>
            <JoyGainFactor>1.2</JoyGainFactor>
        </statBases>
    </ThingDef>

